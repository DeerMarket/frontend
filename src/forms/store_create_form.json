{
  "config": {
    "hideLogo": true,
    "submitText": "Create Store"
  },
  "steps": [
    {
      "name": "name",
      "title": "Store Name",
      "subtitle": "What would you like to name your store?",
      "type": "text",
      "options": {
        "label": "Store name (max 80 characters)"
      },
      "validation": {
        "required": true,
        "min": 3,
        "max": 80
      }
    },
    {
      "name": "id",
      "title": "Store ID",
      "subtitle": "Pick a permanent ID for your store.",
      "type": "text",
      "options": {
        "label": "Store ID (max 21 characters)",
        "placeholder": ""
      },
      "validation": {
        "required": true,
        "min": 3,
        "max": 21,
        "pattern": "near_account_id",
        "useVerify": [["store_id_exists", false]]
      }
    },
    {
      "name": "description",
      "title": "Store Description",
      "subtitle": "Describe your store in a few words.",
      "type": "textarea",
      "options": {
        "label": "Store description (max 700 characters)",
        "placeholder": ""
      },
      "validation": {
        "required": false,
        "max": 700
      }
    },
    {
      "name": "terms",
      "title": "Store Terms and Conditions",
      "subtitle": "Let your customers know what they can expect from your store.",
      "type": "textarea",
      "options": {
        "label": "Store terms and conditions (max 700 characters)",
        "placeholder": ""
      },
      "validation": {
        "required": false,
        "max": 700
      }
    },
    {
      "name": "category",
      "title": "Category",
      "subtitle": "Choose the category most relevant to your store.",
      "type": "select",
      "options": [
        {
          "label": "Services",
          "value": "1"
        },
        {
          "label": "Digital Goods",
          "value": "2"
        },
        {
          "label": "Physical Goods",
          "value": "3"
        },
        {
          "label": "NFTs",
          "value": "4"
        },
        {
          "label": "Courses",
          "value": "5"
        },
        {
          "label": "Other",
          "value": "0"
        }
      ],
      "validation": {
        "required": true,
        "min": 1,
        "max": 1
      }
    },
    {
      "name": "tags",
      "title": "Tags & Keywords",
      "subtitle": "Help buyers find your store by adding relevant tags. (max 5)",
      "type": "array",
      "options": {
        "label": "Store tags",
        "placeholder": "Add a tag (max 15 characters)"
      },
      "validation": {
        "required": false,
        "min": 0,
        "max": 5,
        "maxLength": 15
      }
    },
    {
      "name": "contact",
      "title": "Store Contact",
      "subtitle": "This is important! Buyers will use this to contact you.",
      "type": "fields",
      "validation": {
        "required": false
      },
      "fields": [
        {
          "name": "email",
          "label": "Email",
          "type": "email",
          "placeholder": "john@example.com",
          "validation": {
            "required": false,
            "pattern": "email"
          }
        },
        {
          "name": "phone",
          "label": "Phone",
          "type": "tel",
          "placeholder": "+1 555 555 5555",
          "validation": {
            "required": false,
            "pattern": "phone"
          }
        },
        {
          "name": "website",
          "label": "Website",
          "type": "url",
          "placeholder": "www.example.com",
          "validation": {
            "required": false,
            "pattern": "url"
          }
        }
      ]
    },
    {
      "name": "logo",
      "title": "Store Logo",
      "subtitle": "Show your brand with a custom logo.",
      "type": "image",
      "options": {
        "variant": "avatar"
      },
      "validation": {
        "required": false
      }
    },
    {
      "name": "cover",
      "title": "Store Cover",
      "subtitle": "Customize your store with a cover image.",
      "type": "image",
      "options": {
        "variant": "cover"
      },
      "validation": {
        "required": false
      }
    }
  ]
}
